      アイテムショップ
  .itemShop__main
    .itemShop__main__title
      アイテムを選択してください
    .itemShop__main__lists
      .itemShop__main__lists-1
        .itemShop__main__lists__leftBox
          .itemShop__main__lists__leftBox__image
            = image_tag 'ticket1.png', alt: '画像', class: 'itemImage'
        .itemShop__main__lists__rightBox
        = form_with model: Item.new do |f| 
          .itemShop__main__lists__rightBox__name
            1000円券
            = f.hidden_field :name, :value => "1000円券"
          .itemShop__main__lists__rightBox__explanation
            1000円までなら自由に使ってよい
            = f.hidden_field :explanation, :value => "1000円までなら自由に使ってよい"
          .itemShop__main__lists__rightBox__text
            .itemShop__main__lists__rightBox__text__price
              100ポイント
              = f.hidden_field :price, :value => "100"
            .itemShop__main__lists__rightBox__text__btn
              = f.hidden_field :status, :value => "1"
              = f.hidden_field :count, :value => "1"
              -if @sum >= 100
                = f.submit "購入", class: "submit"
              -else
                %p 100ポイント貯めて！

