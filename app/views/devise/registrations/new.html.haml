.logForm
  .formHeader
    %h2
      新規登録

  .formMain
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .formMain__list
        .field
          ニックネーム
          -# %em (6 characters maximum)
          %em (6文字まで)
          %br= f.text_field :nickname, autofocus: true, maxlength: "6"
      .formMain__list
        .field
          = f.label :メールアドレス
          %br= f.email_field :email, autofocus: true, autocomplete: "email"
      .formMain__list
        .field
          = f.label :パスワード
          -# - if @minimum_password_length
          -#   %em (#{@minimum_password_length} characters minimum)
          %em (6文字以上)
          %br= f.password_field :password, autocomplete: "new-password"
      .formMain__list
        .field
          = f.label :パスワード
          %em (確認用)
          %br= f.password_field :password_confirmation, autocomplete: "new-password"
      .formMain__list
        .actions
          = f.submit "新規登録"


